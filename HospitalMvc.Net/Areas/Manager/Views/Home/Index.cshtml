@model IEnumerable<Doctor>
<br /><br /><br /><br />
<div class="container my-4">
    <button class="btn-primary" href="">
		<a href="/Manager/Home/Create" class="text-white-50 font-monospace"><h5>Add a doctor</h5></a>
        </button>
    <h1 class="mb-4">Doctor List</h1>
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
				<th scope="col">image</th>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Specialization</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var doctor in Model)
                {
                    <tr>
                        <td><img src="~/img/@doctor.Img" alt="No Image" class="img-fluid " style="width:50px ;height:50px" /></td>
                        <td>@doctor.Id</td>
                        <td>@doctor.Name</td>
                        <td>@doctor.Specialization</td>
                        <td>
                            <a href="@Url.Action("Edit", "Home", new { area = "Manager", id = doctor.Id })" class="btn btn-primary btn-sm me-2">Edit</a>
                            <a href="@Url.Action("Delete", "Home", new { area = "Manager", id = doctor.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this doctor?');">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">No doctors found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>