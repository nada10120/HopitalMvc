@model Doctor
<br />
<br />
<br />
<br />
<div class="container my-4">
    <h1 class="mb-4">Edit Doctor</h1>
    <form asp-action="Edit" asp-controller="Home" asp-area="Manager" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="card p-4">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Specialization" class="form-label"></label>
                <input asp-for="Specialization" class="form-control" />
                <span asp-validation-for="Specialization" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="photo" class="form-label">Photo</label>
                @if (!string.IsNullOrEmpty(Model.Img))
                {
                    <div class="mb-2">
                        <img src="~/img/@Model.Img" alt="Current Doctor Photo" class="img-thumbnail" style="max-width: 200px;" />
                    </div>
                    <div class="form-check mb-2">
                        <input type="checkbox" name="deletePhoto" id="deletePhoto" class="form-check-input" />
                        <label for="deletePhoto" class="form-check-label">Delete current photo</label>
                    </div>
                }
                <input type="file" asp-for="Img" id="photo" class="form-control"  />
                <small class="form-text text-muted">Upload a new photo to replace the current one (optional).</small>
				<span asp-validation-for="Img" class="text-danger"></span>
            </div>
            <div class="d-flex gap-2">
                <button type="submit"   class="btn btn-primary">Save</button>
                <a asp-action="Index" asp-controller="Home" asp-area="Manager" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </form>
</div>